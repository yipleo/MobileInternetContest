<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="horizontal"
    tools:context="com.fro.atmenv_cplxmonitorcase.GraphActivity" >

    <!-- 温度 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tem_graph_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="- -" />
        <com.fro.atmenv_cplxmonitorcase.view.VerticalSeekBar
            android:id="@+id/tem_sb"
            android:layout_width="100dp"
            android:layout_height="450dp"
            android:gravity="center"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="温度"
             />
    </LinearLayout>

    <!-- 湿度 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/hum_graph_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="- -" />
        
        <com.fro.atmenv_cplxmonitorcase.view.VerticalSeekBar
            android:id="@+id/hum_sb"
            android:layout_width="100dp"
            android:layout_height="450dp"
            android:gravity="center"
             />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="湿度"
             />
    </LinearLayout>
    
    <!-- 光照度 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/sun_graph_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="- -" />
        <com.fro.atmenv_cplxmonitorcase.view.VerticalSeekBar
            android:id="@+id/sun_sb"
            android:layout_width="100dp"
            android:layout_height="450dp"
            android:gravity="center"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="光照度"
             />
    </LinearLayout>
    
    <!-- PM2.5 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/pm25_graph_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="- -" />
        <com.fro.atmenv_cplxmonitorcase.view.VerticalSeekBar
            android:id="@+id/pm25_sb"
            android:layout_width="100dp"
            android:layout_height="450dp"
            android:gravity="center"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="PM2.5"
             />
    </LinearLayout>

</LinearLayout>